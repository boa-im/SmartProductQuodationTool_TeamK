@model Inventory



@{
    ViewData["Title"] = "Add a new model";
    int[] levels = { 1, 2, 3, 4, 5, 6, 7 };
    string[] pvcodes = { "A", "B", "C", "N" };
}



<div class="container">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form asp-controller="Admin" asp-action="Add" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="text-danger" asp-validation-summary="All"></div>



        <div class="form-group">
            <label asp-for="Level">Level:</label>
            <select asp-for="Level" class="form-select">
                @foreach (int level in levels)
                {
                    <option value=@level>@level</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Name">Model Name:</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <textarea type="text" asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Price">List Price:</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PVCode">PVCode:</label>
            <select asp-for="PVCode" class="form-select">
                @foreach (string pvcode in pvcodes)
                {
                    <option value="@pvcode">@pvcode</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Qty">Quantity:</label>
            <input type="number" asp-for="Qty" class="form-control" />
        </div>



        <button type="submit" class="btn btn-primary m-2">ADD</button>
        <a asp-controller="Admin" asp-action="Manager" class="btn btn-secondary m-2">CANCEL</a>
    </form>
</div>